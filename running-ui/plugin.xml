<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="at.bxm.running.ui.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="RunningPerspective"
            class="at.bxm.running.ui.Perspective"
            id="at.bxm.running.gui.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="at.bxm.running.ui.commands.ExitHandler"
            id="running-gui.commands.exit"
            name="Exit">
      </command>
      <command
            defaultHandler="at.bxm.running.ui.commands.OpenFileHandler"
            id="at.bxm.running.gui.commands.openFile"
            name="Open">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="fileMenu"
               label="File">
            <command
                  commandId="running-gui.commands.exit"
                  style="push">
            </command>
            <command
                  commandId="at.bxm.running.gui.commands.openFile"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="at.bxm.running.ui.views.MapView"
            id="at.bxm.running.gui.views.mapView"
            name="MapView"
            restorable="true">
      </view>
      <view
            class="at.bxm.running.ui.views.ActivitiesView"
            id="at.bxm.running.gui.views.activitiesView"
            name="ActivitiesView"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               closeable="false"
               id="at.bxm.running.gui.views.activitiesView"
               minimized="false"
               ratio="1.0f"
               relationship="top"
               relative="org.eclipse.ui.editorss"
               showTitle="false"
               standalone="true">
         </view>
         <view
               id="at.bxm.running.gui.views.mapView"
               minimized="false"
               ratio="1.0f"
               relationship="right"
               relative="at.bxm.running.gui.views.activitiesView">
         </view>
      </perspectiveExtension>
   </extension>

</plugin>
